{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "gm",
  "plugin": [
    "glootie"
  ],
  "mcp": {
    "dev": {
      "type": "local",
      "command": [
        "bunx",
        "mcp-glootie@latest"
      ],
      "timeout": 360000,
      "enabled": true
    },
    "code-search": {
      "type": "local",
      "command": [
        "bunx",
        "codebasesearch@latest"
      ],
      "timeout": 360000,
      "enabled": true
    }
  }
}