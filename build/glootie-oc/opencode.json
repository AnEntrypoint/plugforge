{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "gm",
  "plugin": {
    "name": "glootie",
    "module": "./index.js"
  },
  "mcp": {
    "dev": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "gxe@latest",
        "AnEntrypoint/mcp-glootie"
      ],
      "timeout": 360000,
      "enabled": true
    },
    "code-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "gxe@latest",
        "AnEntrypoint/code-search"
      ],
      "timeout": 360000,
      "enabled": true
    }
  }
}