{
  "name": "glootie",
  "version": "2.0.4",
  "description": "Advanced Claude Code plugin with WFGY integration, MCP tools, and automated hooks",
  "author": {
    "name": "AnEntrypoint"
  },
  "homepage": "https://github.com/AnEntrypoint/gm",
  "agents": [
    {
      "name": "gm",
      "file": "agents/gm.md"
    }
  ],
  "hooks": {
    "pre_tool_use": "hooks/pre-tool-use-hook.js",
    "session_start": "hooks/session-start-hook.js",
    "prompt_submit": "hooks/prompt-submit-hook.js",
    "stop": "hooks/stop-hook.js"
  },
  "mcpServers": {
    "dev": {
      "command": "bunx",
      "args": [
        "mcp-glootie@latest"
      ],
      "timeout": 360000
    },
    "code-search": {
      "command": "bunx",
      "args": [
        "codebasesearch@latest"
      ],
      "timeout": 360000
    }
  },
  "keywords": [
    "claude-code",
    "claude-plugin",
    "wfgy",
    "mcp",
    "automation",
    "glootie"
  ],
  "license": "MIT"
}