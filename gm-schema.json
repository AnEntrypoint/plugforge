{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "plugforge gm.json Schema",
  "description": "Configuration schema for plugforge plugin specifications",
  "type": "object",
  "required": ["name", "version", "author", "license"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Plugin name (used for repo naming)",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$",
      "examples": ["gm", "gm"]
    },
    "version": {
      "type": "string",
      "description": "Semantic version (propagated to all outputs)",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
      "examples": ["1.0.0", "0.1.0-beta"]
    },
    "author": {
      "type": "string",
      "description": "Author name (used in manifests and package.json)",
      "minLength": 1,
      "examples": ["Anthropic"]
    },
    "license": {
      "type": "string",
      "description": "License type",
      "enum": ["MIT", "Apache-2.0", "GPL-3.0", "ISC", "BSD-3-Clause", "BSD-2-Clause"],
      "examples": ["MIT"]
    },
    "description": {
      "type": "string",
      "description": "Plugin description",
      "minLength": 10,
      "examples": ["An awesome plugin"]
    },
    "keywords": {
      "type": "array",
      "description": "Keywords for plugin discovery",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "examples": [["ai", "coding", "assistant"]]
    },
    "homepage": {
      "type": "string",
      "description": "GitHub repository URL",
      "format": "uri",
      "examples": ["https://github.com/AnEntrypoint/gm"]
    },
    "engines": {
      "type": "object",
      "description": "Node.js version requirements",
      "additionalProperties": false,
      "properties": {
        "node": {
          "type": "string",
          "description": "Node version constraint",
          "examples": [">=16.0.0", ">=18.0.0"]
        }
      }
    },
    "publishConfig": {
      "type": "object",
      "description": "NPM publishing configuration",
      "additionalProperties": false,
      "properties": {
        "access": {
          "type": "string",
          "enum": ["public", "private"],
          "description": "Publication access level",
          "examples": ["public"]
        }
      }
    },
    "mcp": {
      "type": "object",
      "description": "MCP server configurations",
      "additionalProperties": {
        "type": "object",
        "required": ["command"],
        "additionalProperties": false,
        "properties": {
          "command": {
            "type": "string",
            "description": "Command to execute",
            "minLength": 1,
            "examples": ["npx", "python", "node"]
          },
          "args": {
            "type": "array",
            "description": "Command arguments",
            "items": {
              "type": "string"
            },
            "examples": [["@modelcontextprotocol/server-memory"]]
          },
          "timeout": {
            "type": "number",
            "description": "Timeout in milliseconds",
            "minimum": 1000,
            "examples": [30000, 60000]
          }
        }
      },
      "examples": [
        {
          "memory": {
            "command": "npx",
            "args": ["@modelcontextprotocol/server-memory"],
            "timeout": 30000
          }
        }
      ]
    }
  }
}
