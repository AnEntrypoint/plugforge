{
  "name": "glootie",
  "version": "2.0.4",
  "description": "Advanced Claude Code plugin with WFGY integration, MCP tools, and automated hooks",
  "author": "AnEntrypoint",
  "license": "MIT",
  "keywords": [
    "claude-code",
    "claude-plugin",
    "wfgy",
    "mcp",
    "automation",
    "glootie"
  ],
  "homepage": "https://github.com/AnEntrypoint/gm",
  "mcp": {
    "dev": {
      "command": "npx",
      "args": [
        "-y",
        "gxe@latest",
        "AnEntrypoint/mcp-glootie"
      ],
      "timeout": 360000
    },
    "code-search": {
      "command": "npx",
      "args": [
        "-y",
        "gxe@latest",
        "AnEntrypoint/code-search"
      ],
      "timeout": 360000
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
