{
  "description": "Hooks for glootie Claude Code extension",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${__dirname}/pre-tool-use-hook.js",
            "timeout": 3600
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${__dirname}/session-start-hook.js",
            "timeout": 10000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${__dirname}/prompt-submit-hook.js",
            "timeout": 3600
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${__dirname}/stop-hook.js",
            "timeout": 300000
          },
          {
            "type": "command",
            "command": "node ${__dirname}/stop-hook-git.js",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}

